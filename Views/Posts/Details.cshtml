@model finalprojectv2.Models.Post
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Blog Post " + Model.Title;
}



<div style='background-color:whitesmoke' class='container p-4'>
    <h1>@Model.Title</h1>
    <h4>by @Model.User &#64; @Model.Date</h4>
    <hr />
    <p class='content container'>
        @Model.Content
    </p>
    <div class='ui-buttons'>
        @if (SignInManager.IsSignedIn(User) && User.Identity.Name == Model.User){
            <a class='btn btn-dark btn-sm' asp-controller='Posts' asp-action="Edit" asp-route-id="@Model.Id">Edit</a> @Html.Raw("|");
        }

        <a class='btn btn-dark btn-sm' asp-controller='Home' asp-action="Index">Back to List</a>
    </div>
</div>

